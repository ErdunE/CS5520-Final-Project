<?xml version="1.0" encoding="utf-8" ?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Navigation Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#679273"
            android:padding="16dp">

            <!-- Cancel Icon (Left) -->
            <ImageButton
                android:id="@+id/btnCancel"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:contentDescription="Cancel"
                android:src="@drawable/ic_close" />

            <!-- Title (Center) -->
            <TextView
                android:id="@+id/tvDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Add Habit"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

            <!-- Save Icon (Right) -->
            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:contentDescription="Save"
                android:src="@drawable/ic_save" />
        </RelativeLayout>

        <!-- Title & Notes Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habit"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- Habit Title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editHabitTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Habit Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Note"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editHabitDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Icon & Color Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Icon &amp; Color"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- Selected Icon Preview with Remove Button -->
                <FrameLayout
                    android:id="@+id/iconPreviewContainer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iconPreviewImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:contentDescription="Selected Icon Preview" />

                    <ImageView
                        android:id="@+id/iconCancelButton"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_x"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Remove Icon"
                        app:tint="#F44336" />
                </FrameLayout>

                <!-- Icon Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnChooseIcon"
                        android:backgroundTint="#679273"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Choose Icon" />

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnUploadIcon"
                        android:backgroundTint="#679273"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Upload Icon" />
                </LinearLayout>

                <!-- Color Row -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:alignItems="center">

                    <!-- Preset color circles -->
                    <View
                        android:id="@+id/colorRed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#F44336"
                        android:background="@drawable/color_circle" />

                    <View
                        android:id="@+id/colorOrange"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#FF9800"
                        android:background="@drawable/color_circle" />

                    <View
                        android:id="@+id/colorYellow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#FFEB3B"
                        android:background="@drawable/color_circle" />

                    <View
                        android:id="@+id/colorGreen"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#4CAF50"
                        android:background="@drawable/color_circle" />

                    <View
                        android:id="@+id/colorTeal"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#009688"
                        android:background="@drawable/color_circle" />

                    <View
                        android:id="@+id/colorBlue"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#2196F3"
                        android:background="@drawable/color_circle" />

                    <View
                        android:id="@+id/colorPurple"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#9C27B0"
                        android:background="@drawable/color_circle" />

                    <View
                        android:id="@+id/colorBlack"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#212121"
                        android:background="@drawable/color_circle" />

                    <Button
                        android:id="@+id/btnMoreColors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="More Option"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#679273"/>
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Time & Repeat Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time &amp; Repeat"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <!-- Start Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start Date" />

                    <Button
                        android:id="@+id/btnStartDate"
                        android:backgroundTint="#679273"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Date" />
                </LinearLayout>

                <!-- End Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="End Date" />

                    <Button
                        android:id="@+id/btnEndDate"
                        android:backgroundTint="#679273"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Date" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/repeatPickerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Repeat" />

                    <TextView
                        android:id="@+id/tvRepeatSelected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily" />
                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/weekDaySelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/dayMon"
                        style="@style/WeekdayCircle"
                        android:text="Mon" />

                    <TextView
                        android:id="@+id/dayTue"
                        style="@style/WeekdayCircle"
                        android:text="Tue" />

                    <TextView
                        android:id="@+id/dayWed"
                        style="@style/WeekdayCircle"
                        android:text="Wed" />

                    <TextView
                        android:id="@+id/dayThu"
                        style="@style/WeekdayCircle"
                        android:text="Thu" />

                    <TextView
                        android:id="@+id/dayFri"
                        style="@style/WeekdayCircle"
                        android:text="Fri" />

                    <TextView
                        android:id="@+id/daySat"
                        style="@style/WeekdayCircle"
                        android:text="Sat" />

                    <TextView
                        android:id="@+id/daySun"
                        style="@style/WeekdayCircle"
                        android:text="Sun" />

                </com.google.android.flexbox.FlexboxLayout>

                <!-- Every -->
                <LinearLayout
                    android:id="@+id/everyPickerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Every" />

                    <TextView
                        android:id="@+id/tvEveryValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground" />

                    <TextView
                        android:id="@+id/textIntervalUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Reminder Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminder"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <!-- Enable Notifications Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enable Notifications?" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/switch_thumb_color"
                        app:trackTint="@color/switch_track_color"/>
                </LinearLayout>

                <!-- Reminder Time List -->
                <LinearLayout
                    android:id="@+id/reminderContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Placeholder for reminder times -->
                    <LinearLayout
                        android:id="@+id/reminderTimeList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <!-- Add Time Button -->
                    <Button
                        android:id="@+id/btnAddReminder"
                        android:backgroundTint="#679273"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Add Reminder Time"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- Bottom Buttons -->
        <LinearLayout
            android:id="@+id/bottomButtonBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnBottomCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:backgroundTint="#D3D3D3"
                android:textColor="@android:color/black"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnBottomSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:backgroundTint="#679273"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>